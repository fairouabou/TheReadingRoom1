<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.thereadingroom.ui.ManageUsersController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #F8F1E7;">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-padding: 20;">
            <Label text="Manage Users"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Admin"
                    onAction="#onBackToAdmin"/>
        </HBox>
    </top>

    <!-- CENTER: USERS TABLE + BUTTONS -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <TableView fx:id="usersTable" prefHeight="450">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="180"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Make User" onAction="#onMakeUser"/>
                <Button text="Make Admin" onAction="#onMakeAdmin"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
