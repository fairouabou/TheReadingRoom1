<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.thereadingroom.ui.UserDashboardController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #F8F1E7;">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 20 40 10 40;">
            <Label text="My Library"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField"
                       promptText="Search books..."
                       prefWidth="250"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 0 40 40 40;">

            <TableView fx:id="booksTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colTitle" text="Title" prefWidth="250"/>
                    <TableColumn fx:id="colAuthor" text="Author" prefWidth="200"/>
                    <TableColumn fx:id="colListType" text="List" prefWidth="150"/>
                    <TableColumn fx:id="colRating" text="Rating" prefWidth="80"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">

                <Button text="Friends"
                        onAction="#onFriends"
                        style="-fx-background-color: #D7C4A3; -fx-font-size: 16px;"/>

                <Button text="Add"
                        onAction="#onAddBook"
                        style="-fx-background-color: #D7C4A3; -fx-font-size: 16px;"/>

                <Button text="Edit"
                        onAction="#onEditBook"
                        style="-fx-background-color: #D7C4A3; -fx-font-size: 16px;"/>

                <Button text="Delete"
                        onAction="#onDeleteBook"
                        style="-fx-background-color: #D7C4A3; -fx-font-size: 16px;"/>

                <Button text="Analytics"
                        onAction="#onAnalytics"
                        style="-fx-background-color: #C8935B; -fx-font-size: 16px; -fx-font-weight: bold;"/>

                <Button text="Discussions"
                        onAction="#onDiscussions"
                        style="-fx-background-color: #D7C4A3; -fx-font-size: 16px;"/>

                <Button text="Log Out"
                        onAction="#onLogout"
                        style="-fx-background-color: #C8935B; -fx-font-size: 16px;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
