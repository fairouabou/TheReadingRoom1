<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.thereadingroom.ui.ManageBooksController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #F8F1E7;">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Label text="Manage Books"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Admin" onAction="#onBack"/>
        </HBox>
    </top>

    <!-- CENTER TABLE -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <TableView fx:id="booksTable" prefHeight="450">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colTitle" text="Title" prefWidth="250"/>
                    <TableColumn fx:id="colAuthor" text="Author" prefWidth="200"/>
                    <TableColumn fx:id="colGenre" text="Genre" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Add Book" onAction="#onAddBook"/>
                <Button text="Edit Book" onAction="#onEditBook"/>
                <Button text="Delete Book" onAction="#onDeleteBook"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>